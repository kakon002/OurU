<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ourU_NetStandard.Views.AddBookPage"
             BackgroundImage="Background2">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text=" "/>
            <Entry x:Name="bookISBNEntry" Placeholder="ISBN" WidthRequest="360" HeightRequest="40" HorizontalOptions="Center"/>
            <Entry x:Name="bookTitleEntry" Placeholder="Title" WidthRequest="360" HeightRequest="40" HorizontalOptions="Center" />
            <Entry x:Name="bookAuthorEntry" Placeholder="1st Author" WidthRequest="360" HeightRequest="40" HorizontalOptions="Center" />
            <Entry x:Name="bookEditionEntry" Placeholder="Edition" WidthRequest="360" HeightRequest="40" HorizontalOptions="Center" />
            <Label Text=" " HeightRequest="300"/>
                <Button Text="List it!" VerticalOptions="CenterAndExpand"
                    BackgroundColor="lime" Font="20" TextColor="White" WidthRequest="300" HeightRequest="50" CornerRadius="20" Margin="30,0"
                  HorizontalOptions="Center" Clicked="ListBook_Clicked"/>
          </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>